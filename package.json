{
  "name": "ouq77-portfolio",
  "version": "8.2.8",
  "author": "Louw Swart",
  "description": "On-line portfolio of Louw Swart",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ouq77/portfolio-web"
  },
  "engines": {
    "node": "12",
    "npm": "6"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.js --disable-host-check",
    "build": "npm-run-all build:*",
    "build:lint": "ng lint",
    "build:config-2-json": "node config/config.2.json.js",
    "build:compile": "ng build --prod",
    "build:render": "node tools/template-compile -s 'index.html|exclude.html|sitemap.xml|sw.js|scripts.*.js|main-*.js' -c config/config.json",
    "build:html-min-templates": "html-minifier --case-sensitive --collapse-whitespace --remove-comments --minify-css --minify-js --input-dir dist --output-dir dist --file-ext html",
    "build:uglify-js": "uglifyjs dist/sw.js --compress --output dist/sw.js",
    "bump:major": "npm-run-all bump:major:*",
    "bump:minor": "npm-run-all bump:minor:*",
    "bump:patch": "npm-run-all bump:patch:*",
    "bump:major:src": "npmversion --increment major",
    "bump:minor:src": "npmversion --increment minor",
    "bump:patch:src": "npmversion --increment patch",
    "bump:major:heroku": "cd heroku && npmversion --increment major --nogit-tag",
    "bump:minor:heroku": "cd heroku && npmversion --increment minor --nogit-tag",
    "bump:patch:heroku": "cd heroku && npmversion --increment patch --nogit-tag",
    "heroku:build": "npm-run-all build heroku:clean heroku:build:*",
    "heroku:build:copy": "ncp dist heroku/app",
    "heroku:clean": "npm-run-all heroku:clean:*",
    "heroku:clean:images": "rimraf heroku/app/assets/images/*.* heroku/app/assets/images/manifesticons heroku/app/assets/images/touchicons",
    "heroku:clean:markers": "rimraf heroku/app/assets/markers",
    "heroku:clean:resources": "rimraf heroku/app/assets/resources",
    "heroku:clean:files": "rimraf heroku/app/*.html heroku/app/*.js heroku/app/*.css heroku/app/*.ico heroku/app/*.json heroku/app/*.txt heroku/app/*.xml",
    "ncu:update": "ncu -u && npm update && npm update -D",
    "postinstall": "npm prune"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "8.1.1",
    "@angular/common": "8.1.1",
    "@angular/compiler": "8.1.1",
    "@angular/core": "8.1.1",
    "@angular/forms": "8.1.1",
    "@angular/platform-browser": "8.1.1",
    "@angular/platform-browser-dynamic": "8.1.1",
    "@angular/router": "8.1.1",
    "rxjs": "6.5.2",
    "tslib": "1.10.0",
    "zone.js": "0.9.1"
  },
  "devDependencies": {
    "@agm/core": "1.0.0-beta.6",
    "@angular-devkit/build-angular": "0.801.1",
    "@angular/cli": "8.1.1",
    "@angular/compiler-cli": "8.1.1",
    "@angular/language-service": "8.1.1",
    "@ngui/common": "0.6.0",
    "@types/googlemaps": "3.37.0",
    "@types/jquery": "3.3.30",
    "@types/node": "12.6.2",
    "bootstrap-sass": "3.4.1",
    "classlist.js": "1.1.20150312",
    "codelyzer": "5.1.0",
    "command-line-args": "5.1.1",
    "convict": "5.0.0",
    "dateformat": "3.0.3",
    "glob": "7.1.4",
    "html-minifier": "4.0.0",
    "intersection-observer": "0.7.0",
    "jquery": "3.4.1",
    "jsonfile": "5.0.0",
    "lodash": "4.17.14",
    "ncp": "2.0.0",
    "node-sass": "4.12.0",
    "npm-run-all": "4.1.5",
    "npmversion": "1.7.0",
    "rimraf": "2.6.3",
    "ts-node": "8.3.0",
    "tslint": "5.18.0",
    "typescript": "3.4.5",
    "uglify-js": "3.6.0"
  }
}
