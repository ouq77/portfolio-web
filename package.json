{
  "name": "ouq77-portfolio",
  "version": "5.5.4",
  "author": "Louw Swart",
  "description": "On-line portfolio of Louw Swart, based on 'angular2-seed'",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ouq77/portfolio-web"
  },
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "dependencies": {
    "@angular/common": "5.2.8",
    "@angular/core": "5.2.8",
    "@angular/forms": "5.2.8",
    "@angular/http": "5.2.8",
    "@angular/platform-browser": "5.2.8",
    "@angular/platform-browser-dynamic": "5.2.8",
    "core-js": "2.5.3",
    "rxjs": "5.5.7",
    "zone.js": "0.8.20"
  },
  "devDependencies": {
    "@angular/compiler": "5.2.8",
    "@angular/compiler-cli": "5.2.8",
    "@compodoc/compodoc": "1.0.9",
    "@types/dateformat": "1.0.1",
    "@types/es6-shim": "0.31.36",
    "@types/googlemaps": "3.30.7",
    "@types/jquery": "3.3.1",
    "bootstrap-sass": "3.3.7",
    "browserify": "16.1.1",
    "command-line-args": "5.0.2",
    "concat-cli": "4.0.0",
    "convict": "4.0.2",
    "cpy-cli": "1.0.1",
    "dateformat": "3.0.3",
    "html-minifier": "3.5.10",
    "jquery": "3.3.1",
    "jsonfile": "4.0.0",
    "lodash": "4.17.5",
    "mkdirp": "0.5.1",
    "ncp": "2.0.0",
    "node-rev": "2.0.0",
    "node-sass": "4.8.1",
    "npm-run-all": "4.1.2",
    "npmversion": "1.6.2",
    "postbuild": "2.1.0",
    "rimraf": "2.6.2",
    "rollup": "0.56.5",
    "rollup-plugin-commonjs": "9.1.0",
    "rollup-plugin-node-resolve-angular": "2.0.3",
    "tslint": "5.9.1",
    "typescript": "2.7.2",
    "uglify-js": "3.3.14"
  },
  "scripts": {
    "ncu:update": "ncu -u && npm update && npm update -D",
    "postinstall": "npm prune",
    "reinstall": "npm cache clean && rimraf node_modules/* && npm install",
    "clean": "npm-run-all clean:*",
    "clean:compiled": "rimraf compiled/*",
    "clean:temp": "rimraf tmp/*",
    "clean:dist": "rimraf dist/*",
    "heroku:all": "npm-run-all heroku:build heroku:docs",
    "heroku:build": "npm-run-all build heroku:clean heroku:build:*",
    "heroku:build:copy": "ncp dist heroku/app",
    "heroku:clean": "npm-run-all heroku:clean:*",
    "heroku:clean:assets": "rimraf heroku/app/assets/images/*.* heroku/app/assets/images/manifesticons heroku/app/assets/images/touchicons",
    "heroku:clean:css": "rimraf heroku/app/css",
    "heroku:clean:fonts": "rimraf heroku/app/fonts",
    "heroku:clean:js": "rimraf heroku/app/js",
    "heroku:clean:files": "rimraf heroku/app/*.html heroku/app/*.ico heroku/app/*.json heroku/app/*.txt heroku/app/*.xml",
    "heroku:docs": "npm-run-all heroku:docs:*",
    "heroku:docs:clean": "rimraf heroku/app/docs/*",
    "heroku:docs:compile": "compodoc --tsconfig tsconfig.json --theme laravel --silent --name 'Louw Swart // Portfolio' --output heroku/app/docs/",
    "build": "npm-run-all clean build:*",
    "build:lint": "tslint --config tslint.json --format stylish 'src/**/*.ts' --project .",
    "build:setup": "ncp src/ tmp/ && ncp tools/ngfactory/ tmp/",
    "build:sass": "node-sass tmp/ --output tmp/ --output-style compressed --source-map true --omit-source-map-url",
    "build:config-2-json": "node config/config.2.json.js",
    "build:render": "npm-run-all build:render:*",
    "build:render:index": "node tools/compile --source tmp/index.html --context config/config.json --output tmp/index.html",
    "build:render:exclude": "node tools/compile --source tmp/exclude.html --context config/config.json --output tmp/exclude.html",
    "build:render:sitemap": "node tools/compile --source tmp/sitemap.xml --context config/config.json --output tmp/sitemap.xml",
    "build:render:footer": "node tools/compile --source tmp/footer/components/footer.htm --context config/config.json --output tmp/footer/components/footer.htm",
    "build:render:google-analytics": "node tools/compile --source tmp/assets/js/google-analytics.js --context config/config.json --output tmp/assets/js/google-analytics.js",
    "build:render:sw": "node tools/compile --source tmp/sw.js --context config/config.json --output tmp/sw.js",
    "build:html-min-templates": "html-minifier --case-sensitive --collapse-whitespace --remove-comments --minify-css --minify-js --input-dir tmp --output-dir tmp --file-ext htm",
    "build:angular-compile": "ngc -p tsconfig.ngc.json",
    "build:typescript-compile": "tsc -p tsconfig.tsc.json",
    "build:rollup": "rollup -f iife -c rollup.config.js -o compiled/bundle.es2015.js",
    "build:es5": "tsc --target es5 --allowJs true compiled/bundle.es2015.js --out compiled/bundle.es5.js",
    "build:concat-js": "concat-cli -f node_modules/jquery/dist/jquery.min.js node_modules/bootstrap-sass/assets/javascripts/bootstrap.min.js tmp/assets/js/modernizr.custom.js tmp/assets/js/jquery.gridrotator.js tmp/assets/js/stick.up.js tmp/assets/js/jquery.easypiechart.js tmp/assets/js/google-analytics.js tmp/assets/js/pre-render.js tmp/assets/js/service-worker.js -o compiled/bundle.deps.js",
    "build:concat-css": "concat-cli -f tmp/assets/css/layout.css -o compiled/common.min.css",
    "build:minify": "npm-run-all build:minify:*",
    "build:minify:bundle-deps": "uglifyjs compiled/bundle.deps.js --screw-ie8 --compress properties,dead_code,conditionals,unused,join_vars --mangle toplevel --comments --output compiled/bundle.deps.min.js",
    "build:minify:bundle-es5": "uglifyjs compiled/bundle.es5.js --screw-ie8 --compress properties,dead_code,conditionals,unused,join_vars --mangle toplevel --comments --output compiled/bundle.es5.min.js",
    "build:minify:sw": "uglifyjs tmp/sw.js --screw-ie8 --compress properties,dead_code,conditionals,unused,join_vars --mangle toplevel --comments --output dist/sw.js",
    "build:rev": "npm-run-all build:rev:*",
    "build:rev:js": "nodeRev 'compiled/*.min.js' --hash -o dist/js",
    "build:rev:css": "nodeRev 'compiled/common.min.css' --hash -o dist/css",
    "build:assets": "npm-run-all build:assets:*",
    "build:assets:images": "mkdirp dist/assets/images && mkdirp dist/assets/webp && ncp src/assets/images dist/assets/images && ncp src/assets/webp dist/assets/webp",
    "build:assets:static": "cpy 'tmp/*.html' 'tmp/*.ico' 'tmp/manifest.json' 'tmp/*.txt' 'tmp/*.xml' dist && cpy 'README.md' heroku",
    "build:assets:fonts": "mkdirp dist/fonts && ncp src/assets/fonts dist/fonts",
    "build:inject": "postbuild -i tmp/index.html -o dist/index.html -c dist/css -j dist/js -g dist/",
    "build:html-min-final": "html-minifier --case-sensitive --collapse-whitespace --remove-comments --minify-css --minify-js --input-dir dist --output-dir dist --file-ext html",
    "bump:major": "npm-run-all bump:major:*",
    "bump:minor": "npm-run-all bump:minor:*",
    "bump:patch": "npm-run-all bump:patch:*",
    "bump:major:src": "npmversion --increment major",
    "bump:minor:src": "npmversion --increment minor",
    "bump:patch:src": "npmversion --increment patch",
    "bump:major:heroku": "cd heroku && npmversion --increment major --nogit-tag",
    "bump:minor:heroku": "cd heroku && npmversion --increment minor --nogit-tag",
    "bump:patch:heroku": "cd heroku && npmversion --increment patch --nogit-tag"
  }
}
