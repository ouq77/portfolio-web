{
  "name": "ouq77-portfolio",
  "version": "10.3.3",
  "author": "Louw Swart",
  "description": "On-line portfolio of Louw Swart",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/ouq77/portfolio-web"
  },
  "engines": {
    "node": "15",
    "npm": "7"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.js --disable-host-check",
    "build": "npm-run-all build:*",
    "build:config-2-json": "node config/config.2.json.js",
    "build:prep": "npm-run-all build:prep:*",
    "build:prep:clean": "rimraf build",
    "build:prep:copy": "ncp src build",
    "build:lint": "ng lint",
    "build:render": "npm-run-all build:render:*",
    "build:render:components": "node tools/template-compile -d build/app/components/footer/components -s 'footer.html' -c config/config.json",
    "build:render:files": "node tools/template-compile -s 'index.html|sitemap.xml|sw.js|environments/environment.prod.ts' -c config/config.json",
    "build:render:scripts": "node tools/template-compile -d build/assets/js -s 'service-worker.js' -c config/config.json",
    "build:compile": "ng build --prod",
    "build:html-min-templates": "html-minifier --case-sensitive --collapse-whitespace --remove-comments --minify-css --minify-js --input-dir dist --output-dir dist --file-ext html",
    "build:uglify-js": "uglifyjs dist/sw.js --compress --output dist/sw.js",
    "build:fonts": "ncp src/assets/resources dist/assets/resources",
    "bump:major": "npm-run-all bump:major:*",
    "bump:minor": "npm-run-all bump:minor:*",
    "bump:patch": "npm-run-all bump:patch:*",
    "bump:major:src": "npmversion --increment major",
    "bump:minor:src": "npmversion --increment minor",
    "bump:patch:src": "npmversion --increment patch",
    "bump:major:heroku": "cd heroku && npmversion --increment major --nogit-tag",
    "bump:minor:heroku": "cd heroku && npmversion --increment minor --nogit-tag",
    "bump:patch:heroku": "cd heroku && npmversion --increment patch --nogit-tag",
    "heroku:build": "npm-run-all build heroku:clean heroku:build:*",
    "heroku:build:copy": "ncp dist heroku/app",
    "heroku:clean": "npm-run-all heroku:clean:*",
    "heroku:clean:images": "rimraf heroku/app/assets/images/*.* heroku/app/assets/images/manifesticons heroku/app/assets/images/touchicons",
    "heroku:clean:markers": "rimraf heroku/app/assets/markers",
    "heroku:clean:resources": "rimraf heroku/app/assets/resources",
    "heroku:clean:files": "rimraf heroku/app/*.html heroku/app/*.js heroku/app/*.css heroku/app/*.ico heroku/app/*.json heroku/app/*.txt heroku/app/*.xml",
    "ncu:update": "ncu -u && npm update && npm update -D && npm install",
    "postinstall": "ngcc --properties es2015 browser module main --first-only --create-ivy-entry-points && npm prune"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "11.1.0",
    "@angular/common": "11.1.0",
    "@angular/compiler": "11.1.0",
    "@angular/core": "11.1.0",
    "@angular/forms": "11.1.0",
    "@angular/language-service": "11.1.0",
    "@angular/platform-browser": "11.1.0",
    "@angular/platform-browser-dynamic": "11.1.0",
    "@angular/router": "11.1.0",
    "ng-lazyload-image": "9.1.0",
    "rxjs": "6.6.3",
    "tslib": "2.1.0",
    "zone.js": "0.11.3"
  },
  "devDependencies": {
    "@agm/core": "1.1.0",
    "@angular-devkit/build-angular": "0.1101.1",
    "@angular-eslint/builder": "1.1.0",
    "@angular-eslint/eslint-plugin": "1.1.0",
    "@angular-eslint/eslint-plugin-template": "1.1.0",
    "@angular-eslint/schematics": "1.1.0",
    "@angular-eslint/template-parser": "1.1.0",
    "@angular/cli": "11.1.1",
    "@angular/compiler-cli": "11.1.0",
    "@ngui/common": "0.7.0",
    "@types/googlemaps": "3.43.2",
    "@types/jquery": "3.5.5",
    "@types/node": "14.14.22",
    "@typescript-eslint/eslint-plugin": "4.14.0",
    "@typescript-eslint/parser": "4.14.0",
    "bootstrap-sass": "3.4.1",
    "classlist.js": "1.1.20150312",
    "codelyzer": "6.0.1",
    "command-line-args": "5.1.1",
    "convict": "6.0.0",
    "dateformat": "4.5.0",
    "eslint": "7.18.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "31.2.2",
    "eslint-plugin-prefer-arrow": "1.2.2",
    "glob": "7.1.6",
    "html-minifier": "4.0.0",
    "intersection-observer": "0.12.0",
    "jquery": "3.5.1",
    "jsonfile": "6.1.0",
    "lodash": "4.17.20",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.5",
    "npmversion": "1.7.0",
    "rimraf": "3.0.2",
    "sass": "1.32.5",
    "ts-node": "9.1.1",
    "tslint": "6.1.3",
    "typescript": "4.1.3",
    "uglify-js": "3.12.5"
  }
}
